			<VBox>
				<Label text="{/view/wfHistorySelected/AgentName} {/view/wfHistorySelected/AgentDept}" design='Bold' class='lbl'/>
			</VBox>
			<VBox>
				<Text text="{/view/wfHistorySelected/AgentDesc}" class='des_pop'/>
			</VBox>
			<VBox>
				<Text text="{/view/wfHistorySelected/Remark}" class='des_pop'/>
			</VBox>
		</VBox>
	</Popover>
</core:FragmentDefinition>