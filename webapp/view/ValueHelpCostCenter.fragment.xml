<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core">
	<SelectDialog
		id="selCostCenter"
		title="Cost Centers" noDataText="No Cost Center found"
		class="sapUiPopupWithPadding"
		items="{help>/CostCenters}"
		search="_handleValueHelpSearchCostCenter"
		confirm="_handleValueHelpCloseCostCenter"
		cancel="_handleValueHelpCloseCostCenter"
		contentWidth="25rem">
		<StandardListItem
			icon=""
			iconDensityAware="false"
			iconInset="false"
			title="{help>Description}"
			description="{help>CostCenter} {help>CompanyCode}" />
	</SelectDialog>
</core:FragmentDefinition>