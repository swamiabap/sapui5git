<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
    <Dialog title="{rb>/dialogTitle}" contentWidth="28rem" contentHeight="" draggable="true"
            afterClose=".handleAfterClose">
        <content>
            <VBox class="jtcSmallMarginLeft jtcSmallMarginRight">
                <Text text="Remarks" class="sapUiSmallMarginTop"/>
                <TextArea value="{rb>/remarks}" rows="4" class="jtcRemarks sapUiTinyMarginTop sapUiSmallMarginBottom" width=""/>
            </VBox>
        </content>
        <beginButton>
            <Button text="{rb>/routeBackButtonText}" press=".handleRouteBack" type="Emphasized"/>
        </beginButton>
        <endButton>
            <Button text="Cancel" press=".handleClose" type="Ghost" class="jtcSmallMarginRight"/>
        </endButton>
    </Dialog>
</core:FragmentDefinition>