<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
    <Dialog title="Request for Cancellation" contentWidth="28rem" contentHeight="" draggable="true"
            afterClose=".handleAfterClose" busy="{req>/dialogBusy}">
        <content>
            <VBox class="jtcSmallMarginLeft jtcSmallMarginRight">
                <HBox class="sapUiSmallMarginBegin sapUiSmallMarginEnd sapUiSmallMarginTop"
                      alignItems="Center">
                    <VBox width="40%">
                        <Text text="Verifying Officer:" />
                    </VBox>
                    <VBox width="60%">
                        <Select forceSelection="false" selectedKey="{req>/verifyingOfficer}" items="{req>/verifyingOfficers}"
                                id="rc-sel-vo" busy="{req>/verifyingOfficerInputBusy}" width="100%">
                            <core:Item key="{req>key}" text="{req>text}"/>
                        </Select>
                    </VBox>
                </HBox>
                <HBox class="sapUiSmallMarginBegin sapUiSmallMarginEnd sapUiTinyMarginTop"
                      alignItems="Center">
                    <VBox width="40%">
                        <Text text="Status:"/>
                    </VBox>
                    <VBox width="60%">
                        <Text text="{req>/statusText}"/>
                    </VBox>
                </HBox>
                <VBox class="sapUiSmallMarginTop sapUiSmallMarginBottom">
                    <Text text="Remarks:" class=""/>
                    <TextArea value="{req>/remarks}" rows="4" editable="{/view/editMode}" class="jtcRemarks sapUiTinyMarginTop"/>
                </VBox>
            </VBox>
        </content>
        <beginButton>
            <Button text="Request for Cancellation" press=".handleRequestCancellation" type="Emphasized"/>
        </beginButton>
        <endButton>
            <Button text="Cancel" press=".handleClose" type="Ghost"/>
        </endButton>
    </Dialog>
</core:FragmentDefinition>