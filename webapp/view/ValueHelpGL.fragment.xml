<core:FragmentDefinition
        xmlns="sap.m"
        xmlns:core="sap.ui.core">
    <TableSelectDialog
            id="idGLTableSelect"
            noDataText="No GL Account found"
            title="Select GL Account"
            search="_handleValueHelpSearchGL"
            confirm="_handleValueHelpCloseGL"
            cancel="_handleValueHelpCloseGL"
            multiSelect="false" growing="true"
            items="{help>/GLAccounts}">
        <ColumnListItem>
            <cells>
                <Text text="{ path: 'help>GLAccountNumber', formatter: '.formatter.removeLeadingZeros' }"/>
                <Text text="{help>GLAccountDescription}"/>
                <Text text="{help>CompanyCode}"/>
            </cells>
        </ColumnListItem>
        <columns>
            <Column
                    hAlign="Begin" width="5rem"
                    popinDisplay="Inline"
                    demandPopin="true">
                <Label text="GL Account"/>
            </Column>
            <Column
                    hAlign="Begin"
                    popinDisplay="Inline"
                    demandPopin="true"
                    minScreenWidth="Tablet">
                <Label text="Description"/>
            </Column>
            <Column
                    hAlign="Begin" width="5rem"
                    popinDisplay="Inline"
                    demandPopin="false"
                    minScreenWidth="Tablet">
                <Label text="Company"/>
            </Column>
        </columns>
    </TableSelectDialog>
</core:FragmentDefinition>
