<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core">
	<TableSelectDialog
	    id="idAssetSelect"
		noDataText="No Asset found"
		title="Select Asset"
		search="_handleValueHelpSearchAsset"
		confirm="_handleValueHelpCloseAsset"
		cancel="_handleValueHelpCloseAsset"
		multiSelect="false" growing="true"
		items="{help>/Assets}">
		<ColumnListItem>
			<cells>
				<Text text="{help>CompanyCode}"/>
				<Text text="{ path: 'help>MainAssetNumber', formatter: '.formatter.removeLeadingZeros' }"/>
				<Text text="{help>AssetSubnumber}"/>
				<Text text="{help>AssetDescription}"/>
			</cells>
		</ColumnListItem>
		<columns>
			<Column
				hAlign="Begin" width="5rem"
				popinDisplay="Inline"
				demandPopin="true">
				<Label text="Company"/>
			</Column>
			<Column
				hAlign="Begin" width="6rem"
				popinDisplay="Inline"
				demandPopin="true"
				minScreenWidth="Tablet">
				<Label text="Asset No."/>
			</Column>
			<Column
				hAlign="Begin" width="3.5rem"
				popinDisplay="Inline"
				demandPopin="false"
				minScreenWidth="Tablet">
				<Label text="Sub No."/>
			</Column>
			<Column
				hAlign="Begin" width="auto"
				popinDisplay="Inline"
				demandPopin="true">
				<Label text="Asset Description"/>
			</Column>
		</columns>
	</TableSelectDialog>
</core:FragmentDefinition>