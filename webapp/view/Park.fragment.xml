<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
    <Dialog title="Park" contentWidth="28rem" contentHeight="" draggable="true"
            afterClose=".handleAfterClose">
        <content>
            <VBox class="jtcSmallMarginLeft jtcSmallMarginRight">
                <HBox class="sapUiSmallMarginBegin sapUiSmallMarginEnd sapUiSmallMarginTop"
                      alignItems="Center" width="100%">
                    <VBox width="45%">
                        <Text text="Invoice Approving Officer:" />
                    </VBox>
                    <VBox width="55%">
                        <Select forceSelection="false" selectedKey="{park>/invoiceApprovingOfficer}" items="{park>/invoiceApprovingOfficers}"
                                id="rc-sel-vo" busy="{park>/invoiceApprovingOfficerInputBusy}" width="100%">
                            <core:Item key="{park>userId}" text="{park>fullNm}"/>
                        </Select>
                    </VBox>
                </HBox>
                <Text text="Remarks" class="sapUiSmallMarginTop"/>
                <TextArea value="{park>/remarks}" rows="4" class="jtcRemarks sapUiTinyMarginTop sapUiSmallMarginBottom" width=""/>
            </VBox>
        </content>
        <beginButton>
            <Button text="Park" press=".handlePark" type="Emphasized"/>
        </beginButton>
        <endButton>
            <Button text="Cancel" press=".handleClose" type="Ghost"/>
        </endButton>
    </Dialog>
</core:FragmentDefinition>