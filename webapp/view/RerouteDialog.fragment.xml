<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
    <Dialog title="Re-route" contentWidth="28rem" contentHeight="" draggable="true"
        afterClose=".handleAfterClose" busy="{reroute>/rerouteDialogBusy}">
        <content>
            <VBox class="jtcSmallMarginLeft jtcSmallMarginRight">
                <HBox class="sapUiSmallMarginTop" visible="{reroute>/purchGroupVisible}"
                    alignItems="Center">
                    <VBox width="40%">
                        <Text text="Purchasing Group:" />
                    </VBox>
                    <VBox width="60%">
                        <Select forceSelection="false" selectedKey="{reroute>/purchGroup}" items="{reroute>/purchGroups}"
                            id="rr-sel-purchasing-groups" busy="{reroute>/purchGroupInputBusy}">
                            <core:Item key="{reroute>key}" text="{reroute>key}"/>
                        </Select>
                    </VBox>
                </HBox>
                <HBox class="sapUiTinyMarginTop" visible="{reroute>/requestorVisible}"
                    alignItems="Center">
                    <VBox width="40%">
                        <Text text="Requestor:"/>
                    </VBox>
                    <VBox width="60%">
                        <Select forceSelection="false" selectedKey="{reroute>/requestor}" width="19rem"
                            items="{reroute>/requestors}" id="rr-sel-requestors" busy="{reroute>/requestorInputBusy}">
                            <core:Item key="{reroute>userId}" text="{reroute>fullNm}"/>
                        </Select>
                    </VBox>
                </HBox>
                <HBox class="sapUiTinyMarginTop" alignItems="Center" visible="{reroute>/verifyingOfficerVisible}">
                    <VBox width="40%">
                        <Text text="Verifying Officer:"/>
                    </VBox>
                    <VBox width="60%">
                        <Select forceSelection="false" selectedKey="{reroute>/verifyingOfficer}" width="19rem"
                            items="{reroute>/verifyingOfficers}" id="rr-sel-vo" busy="{reroute>/verifyingOfficerInputBusy}">
                            <core:Item key="{reroute>userId}" text="{reroute>fullNm}"/>
                        </Select>
                    </VBox>
                </HBox>
                <HBox class="sapUiTinyMarginTop" alignItems="Center" visible="{reroute>/aaVisible}">
                    <VBox width="40%">
                        <Text text="Approving Authority:"/>
                    </VBox>
                    <VBox width="60%">
                        <Text text="{reroute>/aaFullname}" visible="{reroute>/aaTextVisible}"/>
                        <Select forceSelection="false" selectedKey="{reroute>/approvingAuthority}" width="19rem" visible="{reroute>/aaSelectVisible}"
                                items="{reroute>/approvingAuthorities}" id="rr-sel-aa" busy="{reroute>/approvingAuthorityInputBusy}">
                            <core:Item key="{reroute>userId}" text="{reroute>fullNm}"/>
                        </Select>
                    </VBox>
                </HBox>
                <HBox class="sapUiTinyMarginTop"
                    alignItems="Center">
                    <VBox width="40%">
                        <Text text="Status:"/>
                    </VBox>
                    <VBox width="60%">
                        <Text text="{reroute>/statusText}"/>
                    </VBox>
                </HBox>
                <VBox class="sapUiSmallMarginTop">
                    <Text text="Remarks:" class=""/>
                    <TextArea value="{reroute>/remarks}" rows="4" class="jtcRemarks sapUiTinyMarginTop sapUiSmallMarginBottom" width=""/>
                </VBox>
            </VBox>
        </content>
        <beginButton>
            <Button text="Re-Route" press=".handleReroute" type="Emphasized"/>
        </beginButton>
        <endButton>
            <Button text="Cancel" press=".handleClose" type="Ghost"/>
        </endButton>
    </Dialog>
</core:FragmentDefinition>